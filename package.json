{
  "name": "@escapace/typelevel",
  "description": "typelevel TypeScript library",
  "version": "0.0.0",
  "author": "escapace <opensource@escapace.com>",
  "bugs": "https://github.com/escapace/typelevel/issues",
  "devDependencies": {
    "@commitlint/cli": "8.2.0",
    "@commitlint/config-conventional": "8.2.0",
    "@types/node": "12.11.7",
    "chai": "4.2.0",
    "cross-env": "6.0.3",
    "dtslint": "0.9.9",
    "husky": "3.0.9",
    "lint-staged": "9.4.2",
    "mocha": "6.2.2",
    "prettier": "1.18.2",
    "rimraf": "3.0.0",
    "semantic-release": "15.13.27",
    "syncpack": "4.5.4",
    "tslint": "5.20.0",
    "tslint-config-escapace": "1.6.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-config-standard": "8.0.1",
    "tslint-microsoft-contrib": "6.2.0",
    "typescript": "3.6.4"
  },
  "engines": {
    "node": ">=10.16.0"
  },
  "files": [
    "hkt.d.ts",
    "index.d.ts",
    "typelevel"
  ],
  "homepage": "https://github.com/escapace/typelevel",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged && npm run typecheck && npm run test"
    }
  },
  "keywords": [
    "TypeScript",
    "type-level",
    "typelevel"
  ],
  "license": "MPL-2.0",
  "lint-staged": {
    "package.json": [
      "syncpack-format --source",
      "syncpack-set-semver-ranges --dev --source",
      "git add"
    ],
    "{src,test}/**/*.ts": [
      "tslint --exclude 'index.d.ts' --exclude 'hkt.d.ts' --exclude 'typelevel/**/*.d.ts' --exclude 'test/**/*' --project test/tsconfig.json --fix",
      "prettier --write",
      "git add"
    ],
    "{src,test}/**/*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "repository": "escapace/typelevel",
  "scripts": {
    "build": "rimraf index.d.ts hkt.d.ts typelevel && recce build -e src/index.ts -m esm && rimraf lib/cjs lib/esm lib/umd && mv lib/types/* .",
    "lint": "tslint --project test/tsconfig.json -t codeFrame 'src/**/*.ts'",
    "test": "dtslint --expectOnly --localTs node_modules/typescript/lib test",
    "typecheck": "tsc -p test/tsconfig.json --noEmit"
  },
  "sideEffects": false,
  "typings": "index.d.ts"
}
